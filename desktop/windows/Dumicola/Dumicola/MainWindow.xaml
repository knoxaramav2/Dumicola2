<Window x:Class="Dumicola.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dumicola"
        mc:Ignorable="d"
        Title="Dumicola Desktop" Height="800" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="443*"/>
            <ColumnDefinition Width="221*"/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition Width="133*"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.Column="0" TabStripPlacement="Left" Grid.ColumnSpan="2">
            <TabItem Header="Network">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Apps">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Designer">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Column="2" Background="AliceBlue" Grid.ColumnSpan="2" Margin="3,0,0,0" />
        <GridSplitter Background="Green" Grid.Column="2" Width="3" HorizontalAlignment="Center"/>
    </Grid>
</Window>
